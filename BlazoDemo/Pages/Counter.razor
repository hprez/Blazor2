@page "/counter"
@using Microsoft.Data.SqlClient

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        // Simulamos la creación de un recurso IDisposable que no se libera
        var memoryStream = new MemoryStream();
        var content = new MultipartFormDataContent
        {
            { new StringContent("test content"), "test" }
        };

        // Intentamos enviar una petición HTTP (no se realiza ninguna operación real aquí)
        try
        {
            var response = await Http.PostAsync("https://example.com/api/upload", content);
            response.EnsureSuccessStatusCode();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }

        // Error: memoryStream y content no se han liberado correctamente

        
    }
}
